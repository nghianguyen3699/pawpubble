if [ -f "$assets_dir/yarn.lock" ]; then
  yarn deploy
else
  npm run deploy
fi

cd $phoenix_dir

echo "Noi dung phoenix_static_buildpack.config"
cat phoenix_static_buildpack.config

echo "phoenix_ex=${phoenix_ex}"

mix "${phoenix_ex}.digest"

if mix help "${phoenix_ex}.digest.clean" 1>/dev/null 2>&1; then
  mix "${phoenix_ex}.digest.clean"
fi